<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Text input for exam name -->
        <EditText
            android:id="@+id/examNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Exam Name"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Spinner for class selection -->
        <Spinner
            android:id="@+id/classPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- TextView to display selected deadline (placeholder for date/time picker) -->
        <TextView
            android:id="@+id/deadlinePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Deadline"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Button to upload PDF -->
        <Button
            android:id="@+id/uploadPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload PDF"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- TextView to display PDF name after selection -->
        <TextView
            android:id="@+id/pdfNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No PDF selected"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Dynamic container for questions -->
        <LinearLayout
            android:id="@+id/questionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Button to create exam -->
        <Button
            android:id="@+id/createExamButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Exam"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
