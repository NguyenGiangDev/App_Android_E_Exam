<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách điểm của sinh viên"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#000000" /> <!-- Màu đen cho tiêu đề -->

    <!-- Bảng điểm -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle|end"> <!-- Hiển thị đường kẻ giữa các hàng và cuối bảng -->

        <!-- Dòng tiêu đề -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã học sinh"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#FFFFFF" /> <!-- Màu trắng cho văn bản trong dòng tiêu đề -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Môn học"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#FFFFFF" /> <!-- Màu trắng cho văn bản trong dòng tiêu đề -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                android:padding="8dp"
                android:textColor="#FFFFFF" /> <!-- Màu trắng cho văn bản trong dòng tiêu đề -->
        </TableRow>

        <!-- Dòng dữ liệu -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/student_id_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã học sinh"
                android:textSize="16sp"
                android:maxLines="2"
                android:padding="8dp"
                android:background="#FFFFFF"
               android:textColor="#000000" /> <!-- Màu đen cho văn bản -->

            <TextView
                android:id="@+id/subject_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Môn học"
                android:textSize="16sp"
                android:maxLines="2"
                android:padding="8dp"
                android:background="#FFFFFF"
            android:textColor="#000000" /> <!-- Màu đen cho văn bản -->

            <TextView
                android:id="@+id/score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm"
                android:textSize="16sp"
                android:textColor="#FF0000"
            android:gravity="end"
            android:padding="8dp"
            android:background="#FFFFFF" /> <!-- Màu trắng cho nền văn bản -->
        </TableRow>

    </TableLayout>
</LinearLayout>
